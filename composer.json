{
	"name":        "secretary/php",
	"description": "Monorepo for Secretary's PHP implementation",
	"type":        "library",
	"require-dev": {
		"php":                           "^8.0",
		"ext-json":                      "*",
		"phpunit/phpunit":               "^9.0",
		"mockery/mockery":               "^1.4",
		"symfony/options-resolver":      "^5.2 || ^6.0",
		"aws/aws-sdk-php":               "^3.91",
		"symplify/easy-coding-standard": "^10.0.10",
		"vimeo/psalm":                   "^4.20"
	},
	"license":     "MIT",
	"authors":     [
		{
			"name":  "Aaron Scherer",
			"email": "aequasi@gmail.com"
		}
	],
	"autoload":    {
		"psr-4":                 {
			"Secretary\\":          "src/Core",
			"Secretary\\Adapter\\": "src/Adapter",
			"Secretary\\Bundle\\":  "src/Bundle"
		},
		"exclude-from-classmap": [
			"**/Tests/"
		]
	},
	"scripts": {
		"ecs": "ecs check",
		"ecs:show": "ecs show",
		"ecs:fix": "ecs check --fix",
		"psalm": "psalm --show-info"
	}
}
